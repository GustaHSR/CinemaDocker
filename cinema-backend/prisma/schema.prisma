generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Filme {
  id                      Int      @id @default(autoincrement())
  titulo                  String
  descricao               String
  genero                  String
  classificacaoIndicativa String
  duracao                 String // em minutos
  dataEstreia             String
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
  sessoes                 Sessao[]
}

model Sala {
  id         Int      @id @default(autoincrement())
  nome       String
  capacidade String
  tipo       String // 2D, 3D, IMAX
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  sessoes    Sessao[]
}

model Sessao {
  id        Int        @id @default(autoincrement())
  filmeId   Int
  salaId    Int
  dataHora  DateTime
  preco     Float
  idioma    String // Dublado, Legendado
  formato   String // 2D, 3D
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  filme     Filme      @relation(fields: [filmeId], references: [id])
  sala      Sala       @relation(fields: [salaId], references: [id])
  ingressos Ingresso[]
}

model Ingresso {
  id            Int      @id @default(autoincrement())
  sessaoId      Int
  nomeCliente   String
  cpf           String
  assento       String
  tipoPagamento String // Cart√£o, Pix, Dinheiro
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  sessao        Sessao   @relation(fields: [sessaoId], references: [id])
}
